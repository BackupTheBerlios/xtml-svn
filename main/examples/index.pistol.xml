<html
	xmlns:c = "http://www.dublinux.net/pistol/core"
	xmlns:i18n = "http://www.dublinux.net/pistol/i18n"
	xmlns:entity = "http://www.dublinux.net/pistol/entity">
	<head>
		<link href="/style/pistol.css" rel="stylesheet" type="text/css"/>
	</head>
	<title><i18n:message value="PiSToL Index Example"/></title>
	<body>
	<h1><i18n:message value="Cities"/>(<i18n:getlang/>)</h1>
	<c:table row-classes="light-red,light-green,light-blue">
		<tr><th><i18n:message value="Code"/></th><th><i18n:message value="Name"/></th></tr>
		<c:loop data="$countries" var="country">
			<c:tr col-classes="*,text">
				<c:if lvalue="$country.code" op="!=" rvalue="IT">
					<c:td><c:out value="$country.code"/></c:td>
					<c:td><b><i18n:message value="$country.name" maxlvalue="13" ellipsis="true"/></b></c:td>
				</c:if>
			</c:tr>
		</c:loop>
	</c:table>
	
	<br/>
	<table>
		<tr>
			<td><i18n:message value="Booking cost"/>:</td>
			<td>$<c:out value="$booking.charge"/></td>
		</tr>
		<tr>
			<td><i18n:message value="Booking fee"/>:</td>
			<td>$<c:out value="$booking.fee"/></td>
		</tr>
		<tr>
			<td><i18n:message value="Total charge"/>:</td>
			<td>$<c:out value="$booking.total"/></td>
		</tr>
	</table>
	</body>
</html>
