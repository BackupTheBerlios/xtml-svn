<html
	xmlns:pstl = "http://www.dublinux.net/pstl/core"
	xmlns:i18n = "http://www.dublinux.net/pstl/i18n"
	xmlns:entity = "http://www.dublinux.net/pstl/entity">
	<head>
		<link href="/style/pstl.css" rel="stylesheet" type="text/css"/>
	</head>
	<title><i18n:message value="PSTL Index Example"/></title>
	<body>
	<h1><i18n:message value="Cities"/>(<i18n:getlang/>)</h1>
	<pstl:table row-classes="light-red,light-green,light-blue">
		<tr><th><i18n:message value="Code"/></th><th><i18n:message value="Name"/></th></tr>
		<pstl:loop data="$countries" var="country">
			<pstl:tr col-classes="*,text">
				<pstl:if lvalue="$country.code" op="!=" rvalue="IT">
					<pstl:td><pstl:out value="$country.code"/></pstl:td>
					<pstl:td><b><i18n:message value="$country.name" maxlvalue="13" ellipsis="true"/></b></pstl:td>
				</pstl:if>
			</pstl:tr>
		</pstl:loop>
	</pstl:table>
	
	<br/>
	<table>
		<tr>
			<td><i18n:message value="Booking cost"/>:</td>
			<td>$<pstl:out value="$booking.charge"/></td>
		</tr>
		<tr>
			<td><i18n:message value="Booking fee"/>:</td>
			<td>$<pstl:out value="$booking.fee"/></td>
		</tr>
		<tr>
			<td><i18n:message value="Total charge"/>:</td>
			<td>$<pstl:out value="$booking.total"/></td>
		</tr>
	</table>
	</body>
</html>
